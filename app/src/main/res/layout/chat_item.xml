<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chat_img"
        android:src="@drawable/aa"
        android:layout_width="70dp"
        app:shapeAppearanceOverlay="@style/RoundImage"
        android:layout_height="70dp"/>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/chat_img"
        android:fontFamily="@font/roboto"
        android:text="Alexander"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:src="@drawable/read_chat_icon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/msg_status_tv"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/chat_img"
        android:layout_below="@id/name_tv"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/msg_tv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:text="I forgot my keys"
        android:fontFamily="@font/roboto"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/msg_status_tv"
        android:layout_below="@id/name_tv"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/time_tv"
        android:layout_marginLeft="16dp"
        android:text="9:00 AM"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="#00D55B"
        android:gravity="end"
        android:layout_below="@id/name_tv"
        android:layout_alignTop="@id/name_tv"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/msg_count_tv"
        android:background="@drawable/rounded_corner"
        android:text="3"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/msg_tv"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto"
        android:layout_width="20dp"
        android:layout_below="@id/time_tv"
        android:layout_height="20dp"/>

    <View
        android:background="#D8D8D8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_toRightOf="@id/chat_img"
        android:layout_below="@id/chat_img"/>




</RelativeLayout>